int OnInit()
  {
//--- create timer
   EventSetTimer(5);
//--- create application dialog
   if(!ExtDialog.Create(0,"Ñalculator of signals",0,10,10,980,456))
      return(INIT_FAILED);
//--- run application
   ExtDialog.Run();
//--- succeed
   return(INIT_SUCCEEDED);
  }
